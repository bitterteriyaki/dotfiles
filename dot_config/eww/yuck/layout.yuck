(include "yuck/widgets/clock.yuck")
(include "yuck/widgets/time.yuck")
(include "yuck/widgets/weather.yuck")
(include "yuck/widgets/calendar.yuck")
(include "yuck/widgets/controllers.yuck")

;;
;; Main bar widget
;;
(defwidget left []
  (box
    :halign "start"
    "left"
  )
)

(defwidget right []
  (box
    :halign "end"
    :space-evenly false
    :spacing 5
    (controllers)
    (clock)
  )
)

(defwidget bar []
  (box
    :class "bar"
    (left)
    (right)
  )
)

;;
;; Context dialog
;;
(defwidget first_container []
  (box
    :class "first-container"
    :spacing 8
    (time)
    (weather)
  )
)

(defwidget second_container []
  (box
    :class "second-container"
    (cal)
  )
)

(defwidget context_dialog []
  (box
    :class "ctx-container"
    :space-evenly false
    :orientation "v"
    (first_container)
    (second_container)
  )
)
