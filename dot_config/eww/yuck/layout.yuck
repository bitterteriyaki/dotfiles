(include "yuck/widgets/clock.yuck")
(include "yuck/widgets/controllers.yuck")
(include "yuck/widgets/workspaces.yuck")

(defwidget left []
  (box
    :halign "start"
    :space-evenly false
    :spacing 5
    (workspaces)
  )
)

(defwidget right []
  (box
    :halign "end"
    :space-evenly false
    :spacing 10
    (controllers)
    (clock)
  )
)

(defwidget bar []
  (box
    :class "bar"
    (left)
    (right)
  )
)

