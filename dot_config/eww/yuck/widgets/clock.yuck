(include "yuck/widgets/sep.yuck")

;;
;; Widget
;;
(defwidget clock []
  (eventbox
    :class "clock"
    :onclick "
      eww update is_ctx_revealed=${is_ctx_revealed ? false : true} \
      && eww ${is_ctx_revealed ? 'close' : 'open'} context
    "
    (box
      :class "clock-container"
      :spacing 2
      :space-evenly false
      (label :text "${time.hour}")
      (sep :text "ó°‡™" :size "1.6")
      (label :text "${time.min}")
    )
  )
)
