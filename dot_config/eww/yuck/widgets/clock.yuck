(include "yuck/widgets/sep.yuck")

;;
;; Widget
;;
(defwidget clock []
  (eventbox
    :class "clock"
    :onhover "eww update is_ctx_revealed=true && eww open context"
    :onhoverlost "eww update is_ctx_revealed=false && eww close context"
    (box
      :class "clock-container"
      :spacing 2
      :space-evenly false
      (label :text "${time.hour}")
      (sep :text "ó°‡™" :size "1.6")
      (label :text "${time.min}")
    )
  )
)
