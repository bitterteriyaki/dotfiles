;; Time variables
;;
(defpoll time :interval "1s" "scripts/time.sh")

;;
;; Weather variables
;;
(defpoll weather :interval "1h" "scripts/weather.sh")

;;
;; Revealer variables
;;
(defvar is_ctx_revealed false)
