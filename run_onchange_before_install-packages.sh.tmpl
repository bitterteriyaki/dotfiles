#######################
# Installing packages #
#######################
{{ if eq .chezmoi.os "linux" }}
packages=(
  ttf-jetbrains-mono-nerd
  discord
  google-chrome
  spotify
  visual-studio-code-bin
  openssh
  gnupg
  docker
  bat
  exa
  asdf-vm
  gitflow-avh
)

echo -e "=> Installing packages..."
yay -S --needed --noconfirm "${packages[@]}"
echo -e "=> Packages have been installed."
{{ else if eq .chezmoi.os "darwin" }}
taps=(
  homebrew/cask-fonts
  homebrew/command-not-found
)

echo -e "=> Tapping repositories..."
for tap in "${taps[@]}"; do
  brew tap "$tap" --quiet
done
echo -e "=> Repositories have been tapped."

casks=(
  font-jetbrains-mono-nerd-font
  discord
  google-chrome
  spotify
  visual-studio-code
  docker
)

echo -e "=> Installing casks..."
brew install --cask --quiet "${casks[@]}"
echo -e "=> Casks have been installed."

formulae=(
  openssh
  gnupg
  bat
  exa
  coreutils
  asdf
  git-flow
)

echo -e "=> Installing formulae..."
brew install --quiet "${formulae[@]}"
echo -e "=> Formulae have been installed."
{{ end }}

vscode_packages=(
  # Theming
  dracula-theme.theme-dracula
  PKief.material-icon-theme
  # Utilities
  GitHub.copilot
  WakaTime.vscode-wakatime
  ms-azuretools.vscode-docker
  DavidAnson.vscode-markdownlint
  formulahendry.auto-rename-tag
  naumovs.color-highlight
  bradlc.vscode-tailwindcss
  # Languages
  ms-python.python
  ms-python.vscode-pylance
  redhat.vscode-yaml
  bungcip.better-toml
  IronGeek.vscode-env
  ms-vscode.cpptools-extension-pack
  Vue.volar
  Vue.vscode-typescript-vue-plugin
)

echo -e "=> Installing Visual Studio Code extensions..."
for vscode_package in "${vscode_packages[@]}"; do
  code --install-extension "$vscode_package" --force
done
echo -e "=> Visual Studio Code extensions have been installed."
