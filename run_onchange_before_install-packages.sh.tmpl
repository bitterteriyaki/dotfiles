###########
# Helpers #
###########

start() {
  echo -n "$1"
}

finish() {
  if [[ "$OSTYPE" == "darwin"* ]]; then
    echo -e "\r$1"
  elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    echo -e "\r\e[K$1"
  fi
}

#######################
# Installing packages #
#######################
{{ if eq .chezmoi.os "linux" }}
packages=(
  # Fonts:
  ttf-jetbrains-mono-nerd
  # Essentials:
  discord
  google-chrome
  spotify
  visual-studio-code-bin
  # Utilities:
  openssh
  docker
  bat
  exa
)

start "=> Installing packages..."
yay -S --needed --noconfirm "${packages[@]}" > /dev/null 2>&1
finish "=> Packages have been installed."
{{ else if eq .chezmoi.os "darwin" }}
taps=(
  homebrew/cask-fonts
)

start "=> Tapping repositories..."
for tap in "${taps[@]}"; do
  brew tap "$tap" --quiet
done
finish "=> Repositories have been tapped."

casks=(
  # Fonts:
  font-jetbrains-mono-nerd-font
  # Essentials:
  discord
  google-chrome
  spotify
  visual-studio-code
  # Utilities:
  docker
)

start "=> Installing casks..."
brew install --cask --quiet "${casks[@]}" > /dev/null 2>&1
finish "=> Casks have been installed."

formulae=(
  # Essentials:
  openssh
  # Utilities:
  bat
  exa
)

start "=> Installing formulae..."
brew install --quiet "${formulae[@]}" > /dev/null 2>&1
finish "=> Formulae have been installed."
{{ end }}
