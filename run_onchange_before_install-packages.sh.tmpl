#!/bin/sh

{{ if eq .chezmoi.os "linux" }}
packages=(
  # Applications:
  discord
  google-chrome
  spotify
  godot
  # Fonts:
  ttf-dejavu
  ttf-jetbrains-mono-nerd
  $(yay -Ssq adobe-source-han-sans)
  # Tools:
  git
  chezmoi
  bitwarden-cli
  asdf-vm
  openssh
  gnupg
  jq
  starship
  wezterm
  bat
  eza
  tokei
  zoxide
  neovim
  zsh
  rofi
  dunst
  man
  imagemagick
  # Compatibility with NVIDIA and Wayland:
  qt5-wayland
  qt5ct
  libva
  nvidia-dkms
  linux-headers
  # Other:
  tk
  fzf
)

yay -S --needed --noconfirm "${packages[@]}"
{{ else if eq .chezmoi.os "darwin" }}
# install casks
casks=(
  discord
  google-chrome
  spotify
  godot
  steam
)

brew install --quiet --cask "${casks[@]}"

formulae=(
  chezmoi
  bitwarden-cli
  coreutils
  git
  curl
  asdf
  openssh
  gnupg
  jq
  starship
  wezterm
  bat
  exa
  tokei
  zoxide
  fzf
)

brew install --quiet "${formulae[@]}"
echo "=> Formulae have been installed."
{{ end }}
