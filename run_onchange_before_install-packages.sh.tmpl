#!/bin/sh

{{ if eq .chezmoi.os "linux" }}
packages=(
  # Applications:
  discord
  google-chrome
  spotify
  # Fonts:
  ttf-dejavu
  ttf-jetbrains-mono-nerd
  $(yay -Ssq adobe-source-han-sans)
  # Tools:
  chezmoi
  bitwarden-cli
  asdf-vm
  openssh
  gnupg
  jq
  starship
  wezterm
  # Others:
  gnome-shell-extension-appindicator
)

yay -S --needed --noconfirm "${packages[@]}"
echo -e "=> Packages have been installed."
{{ end }}
