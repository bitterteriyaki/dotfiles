#!/bin/sh

{{ if eq .chezmoi.os "linux" }}
packages=(
  # Applications:
  discord
  google-chrome
  spotify-launcher
  # Fonts:
  ttf-dejavu
  ttf-jetbrains-mono-nerd
  $(yay -Ssq adobe-source-han-sans)
  # Tools:
  git
  chezmoi
  bitwarden-cli
  asdf-vm
  openssh
  gnupg
  jq
  starship
  bat
  eza
  tokei
  zoxide
  neovim
  zsh
  man
  pfetch
  wezterm
  # Other:
  tk
  fzf
)

yay -S --needed --noconfirm "${packages[@]}"
{{ else if eq .chezmoi.os "darwin" }}
# install casks
casks=(
  discord
  google-chrome
  spotify
)

brew install --quiet --cask "${casks[@]}"

formulae=(
  git
  chezmoi
  bitwarden-cli
  coreutils
  curl
  asdf
  openssh
  gnupg
  jq
  starship
  bat
  exa
  tokei
  zoxide
  neovim
  zsh
  man-db
  pfetch
  wezterm
  # Other:
  fzf
)

brew install --quiet "${formulae[@]}"
echo "=> Formulae have been installed."
{{ end }}
