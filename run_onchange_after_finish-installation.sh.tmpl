###################
# Import GPG keys #
###################

echo -e "=> Importing GPG keys..."
export GPG_TTY=$(tty)
echo "{{ (bitwarden "item" "gpg_private").notes }}" | gpg --import -
echo "{{ (bitwarden "item" "gpg_public").notes }}" | gpg --import -
echo -e "=> GPG keys successfully imported."

#####################
# Symlink OMZ theme #
#####################

OMZ_THEMES="$HOME/.oh-my-zsh/custom/themes"

if [ ! -f "$OMZ_THEMES/spaceship.zsh-theme" ]; then
  ln -s "$OMZ_THEMES/spaceship-prompt/spaceship.zsh-theme" "$OMZ_THEMES/spaceship.zsh-theme"
fi

###############################
# Change default shell to ZSH #
###############################

if [ "$SHELL" != "/bin/zsh" ]; then
  echo -e "=> Changing default shell to ZSH..."
  chsh -s /bin/zsh "$USER"
  echo -e "=> Default shell changed to ZSH."
else
  echo -e "=> Default shell is already ZSH."
fi
